<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_main_background"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_login_out"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="1px"
        android:layout_weight="1"
        android:drawablePadding="6dp"
        android:drawableTop="@drawable/icon_message_login_out"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:text="@string/login_out"
        android:textColor="@color/color_text_title"
        android:textSize="@dimen/t12" />

    <TextView
        android:id="@+id/tv_change_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="1px"
        android:layout_weight="1"
        android:drawablePadding="6dp"
        android:drawableTop="@drawable/icon_message_change_pwd"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:text="@string/change_password"
        android:textColor="@color/color_text_title"
        android:textSize="@dimen/t12" />

    <TextView
        android:id="@+id/tv_view_plan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="1px"
        android:layout_weight="1"
        android:drawablePadding="6dp"
        android:drawableTop="@drawable/icon_message_view_plan"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:text="@string/view_plan"
        android:textColor="@color/color_text_title"
        android:textSize="@dimen/t12" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="1px"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:text=""
        android:textColor="@color/color_text_title"
        android:textSize="@dimen/t12" />

</LinearLayout>