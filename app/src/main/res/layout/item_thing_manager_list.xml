<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="8dp"
    android:background="@drawable/shape_case_item_bg"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorPrimary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_comment_background"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="8dp"
            android:text="巡查项: "
            android:textColor="@color/color_text_black"
            android:textSize="@dimen/t14" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/color_tab_line" />

        <TextView
            android:id="@+id/tv_thing_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:maxLines="1"
            android:padding="8dp"
            android:text=""
            android:textColor="@color/color_text_caption"
            android:textSize="@dimen/t14" />

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/color_tab_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FBFFFF"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="8dp"
            android:text="巡查项备注: "
            android:textColor="@color/color_text_black"
            android:textSize="@dimen/t14" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/color_tab_line" />

        <TextView
            android:id="@+id/tv_thing_remark"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:maxLines="1"
            android:padding="8dp"
            android:text=""
            android:textColor="@color/color_text_caption"
            android:textSize="@dimen/t14" />

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/color_tab_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_comment_background"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="8dp"
            android:text="巡查项经度: "
            android:textColor="@color/color_text_black"
            android:textSize="@dimen/t14" />

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@color/color_tab_line" />

        <TextView
            android:id="@+id/tv_thing_lng"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:maxLines="1"
            android:padding="8dp"
            android:text=""
            android:textColor="@color/color_text_caption"
            android:textSize="@dimen/t14" />

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/color_tab_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FBFFFF"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="8dp"
            android:text="巡查项纬度: "
            android:textColor="@color/color_text_black"
            android:textSize="@dimen/t14" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/color_tab_line" />

        <TextView
            android:id="@+id/tv_thing_lat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:maxLines="1"
            android:padding="8dp"
            android:text=""
            android:textColor="@color/color_text_caption"
            android:textSize="@dimen/t14" />

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/color_tab_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_comment_background"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="8dp"
            android:text="操作: "
            android:textColor="@color/color_text_black"
            android:textSize="@dimen/t14" />

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@color/color_tab_line" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:paddingBottom="8dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/tv_thing_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_corner_bg_gray"
                android:paddingBottom="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="5dp"
                android:text="编辑"
                android:textColor="@color/color_text_black"
                android:textSize="@dimen/t14" />

            <TextView
                android:id="@+id/tv_thing_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/shape_corner_bg_gray"
                android:paddingBottom="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="5dp"
                android:text="删除"
                android:textColor="@color/color_text_black"
                android:textSize="@dimen/t14" />

            <TextView
                android:id="@+id/tv_view_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/shape_corner_bg_gray"
                android:paddingBottom="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="5dp"
                android:text="查看坐标"
                android:textColor="@color/color_text_black"
                android:textSize="@dimen/t14" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>